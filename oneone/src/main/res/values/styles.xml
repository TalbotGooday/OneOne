<resources>

	<!-- Base application theme. -->
	<style name="LogTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimaryLog</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkLog</item>
		<item name="colorAccent">@color/colorAccentLog</item>
		<item name="android:textColorHint">@color/secondaryText</item>
	</style>

	<style name="LogTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="LogTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="LogTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="AppTheme" parent="Theme.MaterialComponents.Light" />

	<style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
	</style>

	<style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="SettingsTitle">
		<item name="android:fontFamily">@font/ps_regular</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="SettingsTitle.Bold">
		<item name="android:fontFamily">@font/ps_bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="SettingsSubtitle">
		<item name="android:fontFamily">@font/ps_light</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">14sp</item>
		<item name="android:tag">subtitle</item>
	</style>

	<style name="ToolbarText">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center</item>
		<item name="android:fontFamily">@font/ps_medium</item>
	</style>

	<style name="ItemMenuText">
		<item name="android:fontFamily">@font/ps_medium</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">16sp</item>
	</style>

</resources>
